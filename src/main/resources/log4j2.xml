<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- ======================= APPENDERS ======================= -->
    <Appenders>

        <!-- ===== Console ===== -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36}.%M - %msg%n%throwable"/>
        </Console>

        <!-- ===== INFO ===== -->
        <RollingFile name="InfoFile"
                     fileName="../logs/info/app.log"
                     filePattern="../logs/info/app-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36}.%M - %msg%n%throwable"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>

        <!-- ===== DEBUG (عام) ===== -->
        <RollingFile name="DebugFile"
                     fileName="../logs/debug/debug.log"
                     filePattern="../logs/debug/debug-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36}.%M - %msg%n%throwable"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>

        <!-- ===== SQL ===== -->
        <RollingFile name="SQLFile"
                     fileName="../logs/sql/sql.log"
                     filePattern="../logs/sql/sql-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36}.%M - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>

        <!-- ===== ERROR ===== -->
        <RollingFile name="ErrorFile"
                     fileName="../logs/error/error.log"
                     filePattern="../logs/error/error-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36}.%M - %msg%n%throwable"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>
            <DefaultRolloverStrategy max="60"/>
        </RollingFile>

        <!-- ===== STARTUP ===== -->
        <RollingFile name="StartupFile"
                     fileName="../logs/startup/startup.log"
                     filePattern="../logs/startup/startup-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

    </Appenders>

    <!-- ======================= LOGGERS ======================= -->
    <Loggers>

        <!-- ROOT LOGGER (INFO + أعلى فقط) -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="InfoFile"/>
        </Root>

        <!-- DEBUG LOGGER للرسائل العامة -->
        <Logger name="DEBUG" level="debug" additivity="false">
            <AppenderRef ref="DebugFile"/>
        </Logger>

        <!-- SQL LOGGER -->
        <Logger name="SQL" level="debug" additivity="false">
            <AppenderRef ref="SQLFile"/>
        </Logger>

        <!-- ERROR LOGGER -->
        <Logger name="ERROR" level="error" additivity="false">
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <!-- DAO PACKAGE LOGGER -->
        <Logger name="com.elsewedyt.trialsapp.dao" level="debug" additivity="true">
            <!-- سيصعد للـ Root ويظهر في InfoFile -->
        </Logger>

        <!-- STARTUP LOGGER -->
        <Logger name="startup" level="info" additivity="false">
            <AppenderRef ref="StartupFile"/>
        </Logger>

    </Loggers>

</Configuration>
