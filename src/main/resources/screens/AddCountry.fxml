<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>


<AnchorPane prefHeight="445.0" prefWidth="600.0" stylesheets="@style2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.elsewedyt.trialsapp.controllers.AddCountryController">
   <children>
      <VBox layoutX="33.0" layoutY="25.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="404.0" prefWidth="540.0" styleClass="box">
         <children>
            <HBox alignment="TOP_CENTER" prefHeight="30.0" prefWidth="438.0">
               <children>
                  <Label alignment="TOP_CENTER" prefHeight="32.0" prefWidth="126.0" text="Countries">
                     <font>
                        <Font name="Montserrat Bold" size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="25.0" prefWidth="358.0">
               <VBox.margin>
                  <Insets top="4.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="clear_country_btn" mnemonicParsing="false" onAction="#clear_country" prefHeight="27.0" prefWidth="78.0" styleClass="box-01" text="Clear " HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <graphic>
                        <FontIcon iconLiteral="fa-eraser" />
                     </graphic>
                  </Button>
                  <TextField fx:id="filter_country_textF" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" onKeyPressed="#filter_country" prefHeight="25.0" prefWidth="200.0" promptText="search" styleClass="input" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="12.0" right="12.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="305.0">
               <children>
                  <Button fx:id="add_country_btn" mnemonicParsing="false" onAction="#add_country" prefHeight="27.0" prefWidth="78.0" styleClass="box-01" text="Add   " HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Montserrat Bold" size="12.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <graphic>
                        <FontIcon iconLiteral="fa-plus" />
                     </graphic>
                  </Button>
                  <TextField fx:id="country_name_textF" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="25.0" prefWidth="200.0" promptText="add department name" styleClass="input" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="12.0" right="12.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="4.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="457.0">
               <children>
                  <Button fx:id="update_country_btn" mnemonicParsing="false" onAction="#update_country" prefHeight="27.0" prefWidth="78.0" styleClass="box-01" text="Update" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Montserrat Bold" size="11.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <graphic>
                        <FontIcon iconLiteral="fa-check" />
                     </graphic>
                  </Button>
                  <TextField fx:id="update_country_name_textF" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="25.0" prefWidth="200.0" promptText="update department name" styleClass="input" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="12.0" right="12.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </TextField>
               </children>
               <opaqueInsets>
                  <Insets top="2.0" />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="4.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="88.0" prefWidth="322.0" VBox.vgrow="ALWAYS">
               <children>
                  <TableView id="table1" fx:id="country_table_view" nodeOrientation="LEFT_TO_RIGHT" prefHeight="140.0" prefWidth="306.0" HBox.hgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="country_id_colm" maxWidth="1200.0" prefWidth="25.0" text="ID" />
                        <TableColumn fx:id="country_name_colm" maxWidth="7000.0" minWidth="30.0" prefWidth="214.0" text="Department Name" />
                        <TableColumn fx:id="country_delete_colm" maxWidth="1500.0" prefWidth="30.0" text="Delete" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <HBox.margin>
                        <Insets bottom="-10.0" left="8.0" right="8.0" top="4.0" />
                     </HBox.margin>
                  </TableView>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
